{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Encurtamento de Links",
    "version": "1.0.0"
  },
  "paths": {
    "/api/encurtar": {
      "post": {
        "summary": "Encurta um link usando a API TinyURL do usuário",
        "operationId": "encurtarLink",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "description": "O link longo que será encurtado"
                  }
                },
                "required": ["url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Link encurtado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "encurtado": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

